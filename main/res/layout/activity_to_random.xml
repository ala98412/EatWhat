<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToRandom">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="520dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b2f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="78dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="448dp"
            android:text="To Feed"
            app:layout_constraintBottom_toTopOf="@+id/adViewRandom"
            app:layout_constraintEnd_toStartOf="@+id/b2d"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="74dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="449dp"
            android:text="To Display"
            app:layout_constraintBottom_toTopOf="@+id/adViewRandom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/b2f"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewRamdonStore"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="123dp"
            android:text="吃什麼"
            android:textColor="?attr/colorControlActivated"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonDoRamdon"
            app:layout_constraintEnd_toStartOf="@+id/textViewRamdonFood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewRamdonFood"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="67dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="123dp"
            android:text="吃什麼"
            android:textColor="?android:attr/textColorHighlightInverse"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonDoRamdon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewRamdonStore"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonDoRamdon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="280dp"
            android:layout_marginEnd="161dp"
            android:layout_marginStart="135dp"
            android:text="Go!"
            app:layout_constraintBottom_toTopOf="@+id/adViewRandom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>